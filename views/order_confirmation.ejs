            </div>
        </div>
    </nav>

    <section class="main">
        <div class="js-cta-button button-link button-link__transparent button-link__full-width button-link__blink"></div>

        <!-- <div class="main_background main_background__blink">
            <div class="mainback1"></div>     -->

        </div>
        <div id="lorem" class="lorem"> 
            <div class="order_confirm_container">
                <div class="order_confirm_thanks_box">
                    <div class="order_confirm_thanks_contents">
                        THANK YOU FOR YOUR ORDER, <%= name %>
                    </div>
                    <div class="order_confirm_thanks_order_no">
                        Order Number : <%= order_number %>
                    </div>

                </div>

                <div class="order_confirm_info_box">
                    <div class="order_confirm_info_email">
                        Your Confirmation email will be sent to <%= email %>
                    </div>

                    <div class="order_confirm_info_shipping_box">
                        <div class="order_confirm_info_shipping_detail">
                            <div class="order_confirm_info_shipping_detail_title">Shipping Address & Method</div>
                            <div class="order_confirm_info_shipping_detail_address"></div>
                            <div class="order_confirm_info_shipping_detail_recipient"><%= recipient %></div>
                            <div class="order_confirm_info_shipping_detail_email"><%= email %></div>
                            <div class="order_confirm_info_shipping_detail_phone"><%= phone %></div>



                        </div>

                    </div>

                    <div class="order_confirm_info_billing_box">
                        <div class="order_confirm_info_billing_box_detail">
                            <div class="order_confirm_info_billing_box_detail_title">Payment Method</div>
                            <div class="order_confirm_info_billing_box_detail_type"><%= type %></div>
                            <div class="order_confirm_info_billing_box_detail_ending4"><%= type %>***************<%= ending4 %></div>
                            <div class="order_confirm_info_billing_box_detail_address_title">Billing Address</div>
                            <div class="order_confirm_info_billing_box_detail_address"><%= billing_address %></div>
                            <div class="order_confirm_info_billing_box_detail_cardholder"><%= cardholder %></div>
                        </div>
                    </div>
                </div>

                <div class="order_confirm_summary_box">
                    <div class="order_confirm_summary_box_title">Order Summary</div>
                    <div class="order_confirm_summary_box_detail">
                        <div class="order_confirm_summary_box_detail_subtotal">$<%= subtotal %></div>
                        <div class="order_confirm_summary_box_detail_shippingfee"></div>
                        <div class="order_confirm_summary_box_detail_tax">$<%= tax %></div>
                        <div class="order_confirm_summary_box_detail_shipping_discount"></div>
                        <div class="order_confirm_summary_box_detail_coupon_discount"></div>
                        <div class="order_confirm_summary_box_detail_order_total">$<%= grandtotal %></div>

                    </div>
                </div>








            </div>
        </div>
    </section>
    
    <section class="footer" style="padding-left: 0px; padding-right: 0px;">
        <div class="footer_first">
            <div class="footer_left">
                <div class="foot_address">
                    <br>
                    <span><i aria-hidden="true" class="fas fa-map-marker-alt"></i></span>
                    <span><bold>LOCATION.</bold></span><br>
                    <div class="foot_adr">
                    4400 Roswell RD Ste 126<br>
                    Inside LA Fitness<br>
                    Marietta, GA 30062<br><br>
                    
                    <span>
                        <a href='tel:470-263-6495'><i aria-hidden="true" class="fas fa-phone-alt"></i></span>
                        <span>(470) 263-6495</span></a></div><br>
                </div>   
    
            </div>
            <div class="footer_mid">
                <div class="foot_hours">
                    
                    <br>
                    <span><i aria-hidden="true" class="fas fa-clock"></i></span>
                    <span><bold>HOURS.</bold></span><br>
                    
                    <div class="foot_hr">
                    Monday - Friday<br>
                    11am - 8pm<br>  
                    Satday - Sunday<br>
                    12 - 6pm<br>                    
                    </div>
                </div>
            </div>
        </div>
        <div class="footer_second">
            <div class="footer_mid2">
                <div class="foot_icons">
                    <a href="//www.facebook.com/Cafe-FORE-103402129218652/" target="_blank" style="padding-right: 2rem;"><i class="fab fa-facebook"></i></a>
                    <a href="//www.instagram.com/cafe_fore/" target="_blank"><i class="fab fa-instagram"></i></a>
                    
                </div>
            </div>
    
            <div class="footer_right">
                <div class="logo_btn foot_logo"></div><i class="fa-solid fa-angles-up"></i>
            </div>
        </div>
        index.ejs        
    </section>
	
